{
    "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "Jest: current file",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": ["${fileBasenameNoExtension}", "--config", "jest.config.json", "--watchAll=false"],
        "console": "integratedTerminal",
        "runtimeExecutable": "/usr/local/bin/node"
    }
    ]
}